{
    "compileOnSave": false,
    "compilerOptions": {        
        "moduleResolution": "node",
        "jsx": "react",
        "target": "es6",
        "lib": ["dom", "es7", "es2017"],
        "module": "commonjs",        
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "allowJs": true
    },
    "include": [
        "src"
    ],
    "exclude": [
		"node_modules"
	]
}
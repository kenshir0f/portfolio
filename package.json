{
  "name": "kenshir0f-portfolio",
  "version": "1.0.0",
  "author": "Kenshiro Fujii",
  "license": "MIT",
  "description": "Next.js / Typescript / Firebase, hosted on cloud functions",
  "repository": "https://github.com/kenshir0f/portfolio.git",
  "scripts": {
    "install": "mkdir -p dist dist/public dist/pages dist/static",
    "predeploy": "yarn build && cd dist && yarn",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "dev": "concurrently 'yarn watch-static' 'tsc --watch' 'tcm --watch src' 'cpx ./src/**/*.css ./dist --watch' 'next ./dist'",
    "build": "yarn clean && tcm ./src && tsc && cpx ./src/**/*.css ./dist && next build ./dist && cp package.json dist/package.json && yarn create-public",
    "start": "next start ./dist",
    "clean": "rm -rf dist/ && yarn install",
    "reset": "rm -rf node_modules dist && yarn",
    "watch-static": "watch-run -i -p 'src/static/**' 'rm -rf dist/static && mkdir dist/static && cpx \"src/static/**/*\" dist/static'",
    "create-public": "mkdir -p dist/public && cp -r src/public/* dist/public && mkdir -p dist/public/static && cp -r src/static/* dist/public/static",
    "storybook": "start-storybook -s ./src/ -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.4",
    "@storybook/addon-links": "^3.4.4",
    "@storybook/addon-viewport": "^3.4.4",
    "@storybook/addons": "^3.4.4",
    "@storybook/cli": "^3.4.4",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__react": "^3.0.7",
    "@storybook/react": "^3.4.4",
    "@types/next": "^2.4.9",
    "@types/node": "^10.0.4",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/request-promise": "^4.1.41",
    "@types/sinon": "^4.3.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-define": "^1.3.0",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "firebase-mock": "^2.2.2",
    "firebase-tools": "^3.18.4",
    "jest": "^22.4.3",
    "shana": "^0.1.2",
    "sinon": "^4.5.0",
    "tslint": "^5.7.0",
    "typescript": "^2.8.3",
    "watch-run": "^1.2.5",
    "typed-css-modules": "^0.3.4"
  },
  "dependencies": {
    "@google-cloud/storage": "1.6.0",

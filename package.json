    "babel-runtime": "6.26.0",
    "basic-auth-connect": "1.0.0",
    "cookie-parser": "1.4.3",
    "dotenv": "5.0.1",
    "event-response": "0.4.3",
    "express": "4.16.3",
    "fetch-jsonp": "1.1.3",
    "fire-slack": "0.5.0",
    "firebase": "5.0.2",
    "firebase-admin": "5.12.1",
    "firebase-functions": "1.0.2",
    "googleapis": "30.0.0",

{
  "name": "kenshir0f-portfolio",
  "version": "1.0.0",
  "author": "Kenshiro Fujii",
  "license": "MIT",
  "description": "Next.js / Typescript / Firebase, hosted on cloud functions",
  "repository": "https://github.com/kenshir0f/portfolio.git",
  "scripts": {
    "install": "mkdir -p dist dist/public dist/pages dist/static",
    "predeploy": "yarn build && cd dist && yarn",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "dev": "concurrently 'yarn watch-static' 'tsc --watch' 'tcm --watch src' 'cpx ./src/**/*.css ./dist --watch' 'next ./dist'",
    "build": "yarn clean && tsc && cp src/components/Atoms/Icon/style.css dist/components/Atoms/Icon && next build ./dist && cp package.json dist/package.json && yarn create-public",
    "__build": "yarn clean && tsc && cp src/components/Atoms/Icon/style.css dist/components/Atoms/Icon && next build ./dist",
    "start": "next start ./dist",
    "clean": "rm -rf dist/ && yarn install",
    "reset": "rm -rf node_modules dist && yarn",
    "watch-static": "watch-run -i -p 'src/static/**' 'rm -rf dist/static && mkdir dist/static && cp src/static/* dist/static'",
    "create-public": "mkdir dist/public/static && cp src/static/* dist/public/static && echo \"not used\" > dist/public/__placeholder.html"
  },
  "devDependencies": {
    "@types/next": "^2.4.9",
    "@types/node": "^10.0.4",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/request-promise": "^4.1.41",
    "@types/sinon": "^4.3.1",
    "babel-plugin-transform-define": "^1.3.0",
    "concurrently": "^3.5.1",
    "firebase-mock": "^2.2.2",
    "firebase-tools": "^3.18.4",
    "jest": "^22.4.3",
    "shana": "^0.1.2",
    "sinon": "^4.5.0",
    "tslint": "^5.7.0",
    "typescript": "^2.8.3",
    "watch-run": "^1.2.5"
  },
  "dependencies": {
    "@google-cloud/storage": "1.6.0",
    "@zeit/next-css": "^0.2.0",
    "babel-runtime": "^6.26.0",
    "basic-auth-connect": "^1.0.0",
    "cookie-parser": "^1.4.3",
    "cpx": "^1.5.0",
    "dotenv": "^5.0.1",
    "event-response": "0.4.3",
    "express": "^4.16.3",
    "fetch-jsonp": "^1.1.3",
    "fire-slack": "0.5.0",
    "firebase": "^4.13.1",
    "firebase-admin": "5.12.0",
    "firebase-functions": "1.0.1",
    "googleapis": "^29.0.0",
    "lodash": "4.17.5",
    "next": "^5.0.0",
    "process-promises": "1.0.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "split": "1.0.1",
    "typed-css-modules": "^0.3.4"
  }
}
